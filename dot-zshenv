# Adopt $XDG_CONFIG_HOME for configuration files repo
# Refer to:
# https://thevaluable.dev/zsh-install-configure-mouseless/
# https://github.com/sorin-ionescu/prezto?tab=readme-ov-file#manual
# -- Louis 2024/0312
export DOTFILES="$HOME/.dotfiles"

export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:=$HOME/.config}"
export XDG_DATA_HOME="$DOTFILES/dot-local/share"
export XDG_STATE_HOME="$DOTFILES/dot-local/state"
export XDG_CACHE_HOME="$XDG_CONFIG_HOME/cache"

[[ -d $XDG_CONFIG_HOME/zsh ]] && export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
source "$ZDOTDIR/.zshenv"
